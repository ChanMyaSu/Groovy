@using Groovy.Domain
@using Groovy.Data
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<GroovyContext> DbFactory
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS

<div class="music-player-container">
    @if (!string.IsNullOrEmpty(CurrentSong?.AudioFilePath))
    {
        <div class="music-player">
            <div class="player-info">
                <div class="song-icon">🎵</div>
                <div class="song-details">
                    <div class="song-title">@CurrentSong.Title</div>
                    <div class="song-meta">
                        <span class="current-time">@FormatTime(currentTime)</span>
                        <span class="separator">/</span>
                        <span class="total-time">@FormatTime(CurrentSong.DurationSec)</span>
                    </div>
                </div>
            </div>

            <div class="player-controls">
                <button class="btn-control" @onclick="TogglePlayPause" disabled="@isLoading">
                    @if (isPlaying)
                    {
                        <span class="icon">⏸</span>
                    }
                    else
                    {
                        <span class="icon">▶️</span>
                    }
                </button>
                <button class="btn-control btn-stop" @onclick="Stop">
                    <span class="icon">⏹</span>
                </button>
            </div>

            <div class="progress-container">
                <input type="range"
                       class="progress-bar"
                       min="0"
                       max="@CurrentSong.DurationSec"
                       value="@currentTime"
                       @oninput="SeekTo"
                       disabled="@isLoading" />
                <div class="progress-fill" style="width: @(progressPercent)%"></div>
            </div>

            <!-- CRITICAL: Audio element with proper attributes -->
            <audio id="@audioElementId"
                   preload="auto"
                   crossorigin="anonymous">
                <source src="@CurrentSong.AudioFilePath" type="audio/mpeg" />
                Your browser does not support the audio element.
            </audio>
        </div>

        
    }
    else
    {
        <div class="no-audio-message">
            <span class="icon">🎵</span>
            <span>No audio file available</span>
        </div>
    }
</div>

@code {
    [Parameter]
    public Song? CurrentSong { get; set; }

    private string audioElementId = $"audio-player-{Guid.NewGuid()}";
    private bool isPlaying = false;
    private bool isLoading = false;
    private double currentTime = 0;
    private double progressPercent = 0;
    private int? currentHistoryId = null;
    private string? currentUserId = null;
    private string lastError = "";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        currentUserId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value
                       ?? user.FindFirst("userId")?.Value;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && CurrentSong != null)
        {
            // Setup event listeners
            await SetupAudioElement();
        }
    }

    private async Task SetupAudioElement()
    {
        try
        {
            await JS.InvokeVoidAsync("eval", $@"
                var audio = document.getElementById('{audioElementId}');
                if (audio) {{
                    console.log('Audio element found:', audio);
                    console.log('Audio src:', audio.src);
                    audio.addEventListener('timeupdate', function() {{
                        // Time update handler
                    }});
                    audio.addEventListener('ended', function() {{
                        console.log('Audio ended');
                    }});
                    audio.addEventListener('error', function(e) {{
                        console.error('Audio error:', e);
                        console.error('Audio error code:', audio.error.code);
                        console.error('Audio error message:', audio.error.message);
                    }});
                }} else {{
                    console.error('Audio element not found!');
                }}
            ");
        }
        catch (Exception ex)
        {
            lastError = $"Setup error: {ex.Message}";
            Console.WriteLine($"Setup error: {ex.Message}");
        }
    }

    private async Task TogglePlayPause()
    {
        if (isPlaying)
        {
            await Pause();
        }
        else
        {
            await Play();
        }
    }

    private async Task Play()
    {
        if (CurrentSong == null || string.IsNullOrEmpty(CurrentSong.AudioFilePath))
            return;

        try
        {
            isLoading = true;
            lastError = "";
            StateHasChanged();

            // Record play in listening history
            if (currentUserId != null && currentHistoryId == null)
            {
                await RecordPlayInHistory();
            }

            // CRITICAL: Play the audio
            var result = await JS.InvokeAsync<string>("eval", $@"
                (function() {{
                    try {{
                        var audio = document.getElementById('{audioElementId}');
                        if (!audio) {{
                            return 'ERROR: Audio element not found';
                        }}
                        console.log('Attempting to play:', audio.src);
                        var playPromise = audio.play();
                        if (playPromise !== undefined) {{
                            playPromise.then(function() {{
                                console.log('Playback started successfully');
                                return 'SUCCESS';
                            }}).catch(function(error) {{
                                console.error('Play failed:', error);
                                return 'ERROR: ' + error.message;
                            }});
                        }}
                        return 'PLAY_CALLED';
                    }} catch (e) {{
                        console.error('Exception:', e);
                        return 'ERROR: ' + e.message;
                    }}
                }})()
            ");

            Console.WriteLine($"Play result: {result}");

            if (result.StartsWith("ERROR"))
            {
                lastError = result;
            }
            else
            {
                isPlaying = true;
            }
        }
        catch (Exception ex)
        {
            lastError = $"Play error: {ex.Message}";
            Console.WriteLine($"Error playing audio: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task Pause()
    {
        try
        {
            await JS.InvokeVoidAsync("eval", $"document.getElementById('{audioElementId}').pause()");
            isPlaying = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            lastError = $"Pause error: {ex.Message}";
            Console.WriteLine($"Error pausing audio: {ex.Message}");
        }
    }

    private async Task Stop()
    {
        try
        {
            await JS.InvokeVoidAsync("eval", $@"
                var audio = document.getElementById('{audioElementId}');
                audio.pause();
                audio.currentTime = 0;
            ");
            isPlaying = false;
            currentTime = 0;
            progressPercent = 0;
            currentHistoryId = null;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            lastError = $"Stop error: {ex.Message}";
            Console.WriteLine($"Error stopping audio: {ex.Message}");
        }
    }

    private async Task SeekTo(ChangeEventArgs e)
    {
        if (e.Value != null && double.TryParse(e.Value.ToString(), out double seekTime))
        {
            try
            {
                await JS.InvokeVoidAsync("eval", $"document.getElementById('{audioElementId}').currentTime = {seekTime}");
                currentTime = seekTime;
                UpdateProgress();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error seeking: {ex.Message}");
            }
        }
    }

    private void UpdateProgress()
    {
        if (CurrentSong != null && CurrentSong.DurationSec > 0)
        {
            progressPercent = (currentTime / CurrentSong.DurationSec) * 100;
            StateHasChanged();
        }
    }

    private async Task RecordPlayInHistory()
    {
        try
        {
            using var context = DbFactory.CreateDbContext();

            var history = new ListeningHistory
            {
                AppUserId = currentUserId!,
                SongId = CurrentSong!.Id,
                ListenedAt = DateTime.UtcNow,
                PlayedDurationPercent = 0,
                Skipped = false,
                DateCreated = DateTime.UtcNow,
                CreatedBy = currentUserId
            };

            context.ListeningHistory.Add(history);
            await context.SaveChangesAsync();

            currentHistoryId = history.Id;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error recording play: {ex.Message}");
        }
    }

    private string FormatTime(double seconds)
    {
        var ts = TimeSpan.FromSeconds(seconds);
        return $"{(int)ts.TotalMinutes}:{ts.Seconds:D2}";
    }
}


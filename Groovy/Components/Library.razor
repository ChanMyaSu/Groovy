        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .artist-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(0,0,0,0.15);
        border-color: #667eea;
    }

    .artist-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .artist-name {
        font-size: 1.4rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 1rem;
    }

    /* Genres Grid */
    .genres-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1.5rem;
    }

    .genre-card-link {
        text-decoration: none;
        color: inherit;
    }

    .genre-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 16px;
        padding: 2rem;
        text-align: center;
        color: white;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        transition: all 0.3s ease;
    }

    .genre-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(102, 126, 234, 0.4);
    }

    .genre-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .genre-name {
        font-size: 1.4rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }


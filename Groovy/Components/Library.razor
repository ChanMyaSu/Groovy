        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .btn-play:hover:not(:disabled) {
        transform: scale(1.1);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .btn-play:disabled {
        background: #cbd5e0;
        cursor: not-allowed;
    }

    .play-icon {
        font-size: 1.2rem;
    }

    .song-info {
        flex: 1;
    }

    .song-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 0.3rem;
    }

    .song-meta {
        display: flex;
        gap: 1rem;
        font-size: 0.9rem;
        color: #718096;
    }

    .mood-tag {
        background: #edf2f7;
        padding: 0.2rem 0.6rem;
        border-radius: 12px;
        font-size: 0.85rem;
    }

    .no-audio {
        background: #fed7d7;
        color: #c53030;
        padding: 0.2rem 0.6rem;
        border-radius: 12px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .song-actions {
        display: flex;
        gap: 0.5rem;
    }

    .btn-details, .view-link {
        padding: 0.5rem 1rem;
        background: transparent;
        color: #667eea;
        border: 2px solid #667eea;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-block;
    }

    .btn-details:hover, .view-link:hover {
        background: #667eea;
        color: white;
    }

    .no-results {
        text-align: center;
        padding: 4rem 2rem;
        font-size: 1.2rem;
        color: #718096;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .library-tabs {
            flex-direction: column;
        }

        .artists-grid, .genres-grid {
            grid-template-columns: 1fr;
        }

        .song-item {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>

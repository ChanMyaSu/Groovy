@page "/library"
@rendermode InteractiveServer
@using Groovy.Components.Pages
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using Groovy.Domain
@using Groovy.Data
@inject IDbContextFactory<GroovyContext> DbFactory
@implements IAsyncDisposable
@attribute [Authorize]

<PageTitle>Library - Groovy</PageTitle>

<div class="library-container">
    <div class="library-header">
        <h1 class="library-title">🎵 Music Library</h1>
        <p class="library-subtitle">Explore artists, genres, and songs</p>
    </div>

    <!-- Tabs -->

    <div class="library-tabs">
        <button class="tab-button @(activeTab == "artists" ? "active" : "")" 
                @onclick='() => SetActiveTab("artists")'>
            <span class="tab-icon">👨‍🎤</span>
            Artists
        </button>
        <button class="tab-button @(activeTab == "genres" ? "active" : "")" 
                @onclick='() => SetActiveTab("genres")'>
            <span class="tab-icon">🎭</span>
            Genres
        </button>
        <button class="tab-button @(activeTab == "songs" ? "active" : "")" 
                @onclick='() => SetActiveTab("songs")'>
            <span class="tab-icon">🎵</span>
            Songs
        </button>
    </div>

    <!-- Search Bar -->
    <div class="search-container">
        <input type="text" 
               class="search-input" 
               placeholder="Search..." 
               @bind="searchQuery"
               @bind:event="oninput" 
               @onkeyup="OnSearchChanged" />
        <span class="search-icon">🔍</span>
    </div>

    <!-- Tab Content -->
    <div class="tab-content">
        @if (activeTab == "artists")
        {
            <div class="list-container">
                <h2 class="section-heading">All Artists (@FilteredArtists.Count())</h2>

                @if (FilteredArtists.Any())
                {
                    <div class="items-list">
                        @foreach (var artist in FilteredArtists)
                        {
                            <div class="list-item">
                                <div class="item-icon artist-icon-small">👨‍🎤</div>
                                <div class="item-info">
                                    <div class="item-title">@artist.Name</div>
                                    @if (!string.IsNullOrEmpty(artist.Name))
                                    {
                                        <div class="item-subtitle">@artist.Name</div>
                                    }
                                </div>
                                <div class="item-actions">
                                    <a href="@($"/artists/details?id={artist.Id}")" class="btn-details">View Details</a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="no-results">No artists found</div>
                }
            </div>
        
        }
        else if (activeTab == "genres")
        {
            <div class="genres-grid">
                @foreach (var genre in FilteredGenres)
                {
                    <a href="@($"/genres/details?id={genre.Id}")" class="genre-card-link">
                        <div class="genre-card">
                            <div class="genre-icon">🎭</div>
                            <h3 class="genre-name">@genre.Name</h3>
                            <div class="view-link">View Details →</div>
                        </div>
                    </a>
                }
                @if (!FilteredGenres.Any())
                {
                    <div class="no-results">No genres found</div>
                }
            </div>
        }
        else if (activeTab == "songs")
        {
            <!-- Music Player -->
            @if (currentSong != null)
            {
                <div class="current-player">
                    <MusicPlayer CurrentSong="@currentSong" />
                </div>
            }

            <div class="songs-list">
                @foreach (var song in FilteredSongs)
                {
                    <div class="song-item @(currentSong?.Id == song.Id ? "playing" : "")">
                        <button class="btn-play" @onclick="() => PlaySong(song)" disabled="@(string.IsNullOrEmpty(song.AudioFilePath))">
                            @if (currentSong?.Id == song.Id)
                            {
                                <span class="play-icon">🎵</span>
                            }
                            else if (!string.IsNullOrEmpty(song.AudioFilePath))
                            {
                                <span class="play-icon">▶️</span>
                            }
                            else
                            {
                                <span class="play-icon">🚫</span>
                            }
                        </button>
                        <div class="song-info">
                            <div class="song-title">@song.Title</div>
                            <div class="song-meta">
                                <span class="duration">@FormatDuration(song.DurationSec)</span>
                                @if (!string.IsNullOrEmpty(song.MoodTag))
                                {
                                    <span class="mood-tag">@song.MoodTag</span>
                                }
                                @if (string.IsNullOrEmpty(song.AudioFilePath))
                                {
                                    <span class="no-audio">No audio file</span>
                                }
                            </div>
                        </div>
                        <div class="song-actions">
                            <a href="@($"/songs/details?id={song.Id}")" class="btn-details">Details</a>
                        </div>
                    </div>
                }
                @if (!FilteredSongs.Any())
                {
                    <div class="no-results">No songs found</div>
                }
            </div>
        }
    </div>
</div>

@code {
    private GroovyContext context = default!;
    private string activeTab = "songs";
    private string searchQuery = "";
    private Song? currentSong = null;

    private List<Artist> artists = new();
    private List<Genre> genres = new();
    private List<Song> songs = new();

    private IEnumerable<Artist> FilteredArtists => 
        string.IsNullOrWhiteSpace(searchQuery) 
            ? artists 
            : artists.Where(a => a.Name != null && a.Name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase));

    private IEnumerable<Genre> FilteredGenres => 
        string.IsNullOrWhiteSpace(searchQuery) 
            ? genres 
            : genres.Where(g => g.Name != null && g.Name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase));

    private IEnumerable<Song> FilteredSongs => 
        string.IsNullOrWhiteSpace(searchQuery) 
            ? songs 
            : songs.Where(s => s.Title != null && s.Title.Contains(searchQuery, StringComparison.OrdinalIgnoreCase));

    protected override async Task OnInitializedAsync()
    {
        context = DbFactory.CreateDbContext();
        await LoadData();
    }

    private async Task LoadData()
    {
        artists = await context.Artist.OrderBy(a => a.Name).ToListAsync();
        genres = await context.Genre.OrderBy(g => g.Name).ToListAsync();
        songs = await context.Song.OrderBy(s => s.Title).ToListAsync();
    }

    private void SetActiveTab(string tab)
    {
        activeTab = tab;
        searchQuery = "";
        currentSong = null;
    }

    private void OnSearchChanged()
    {
        StateHasChanged();
    }

    private void PlaySong(Song song)
    {
        if (!string.IsNullOrEmpty(song.AudioFilePath))
        {
            currentSong = song;
            StateHasChanged();
        }
    }

    private string FormatDuration(int seconds)
    {
        var ts = TimeSpan.FromSeconds(seconds);
        return $"{(int)ts.TotalMinutes}:{ts.Seconds:D2}";
    }

    public async ValueTask DisposeAsync()
    {
        if (context != null)
        {
            await context.DisposeAsync();
        }
    }
}

<style>

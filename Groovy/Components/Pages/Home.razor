@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

<PageTitle>Groovy - Find Your Groove</PageTitle>

<style>
    :root {
        --bg-dark: #121212;
        --bg-card: #181818;
        --bg-card-hover: #282828;
        --text-primary: #ffffff;
        --text-secondary: #b3b3b3;
        --accent-gradient: linear-gradient(135deg, #4f46e5 0%, #a855f7 100%);
        --hover-transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    body {
        background-color: var(--bg-dark);
        color: var(--text-primary);
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }

    .app-container {
        max-width: 1600px;
        margin: 0 auto;
        padding: 2rem;
    }

    /* --- HERO BANNER (Authenticated) --- */
    .hero-banner {
        background: rgb(63,94,251);
        background: radial-gradient(circle, rgba(63,94,251,1) 0%, rgba(252,70,107,1) 100%);
        border-radius: 12px;
        padding: 3rem;
        margin-bottom: 2.5rem;
        position: relative;
        overflow: hidden;
        color: white;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    .hero-content h1 {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        letter-spacing: -1px;
    }

    .hero-content p {
        font-size: 1.2rem;
        opacity: 0.9;
        margin-bottom: 2rem;
        max-width: 600px;
    }

    .hero-btn {
        background: white;
        color: black;
        padding: 1rem 2.5rem;
        border-radius: 50px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        border: none;
        transition: var(--hover-transition);
        text-decoration: none;
        display: inline-block;
    }

        .hero-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 0 20px rgba(255,255,255,0.4);
            color: black;
        }

    /* --- GRID LAYOUT --- */
    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: var(--text-primary);
    }

    .card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .feature-card {
        background-color: var(--bg-card);
        border-radius: 8px;
        padding: 1.5rem;
        text-decoration: none;
        transition: var(--hover-transition);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        min-height: 180px;
        position: relative;
    }

        .feature-card:hover {
            background-color: var(--bg-card-hover);
            transform: translateY(-5px);
        }

    .card-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        background: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        width: fit-content;
    }

    .card-title {
        color: var(--text-primary);
        font-weight: 700;
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    .card-desc {
        color: var(--text-secondary);
        font-size: 0.9rem;
        line-height: 1.4;
    }

    /* --- LANDING PAGE (Non-Auth) --- */
    .landing-wrapper {
        text-align: center;
        padding: 5rem 1rem;
    }

    .landing-title {
        font-size: 5rem;
        font-weight: 900;
        background: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 1rem;
    }

    .landing-subtitle {
        font-size: 1.5rem;
        color: var(--text-secondary);
        margin-bottom: 3rem;
    }

    .auth-actions {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
    }

    .btn-glow {
        background: var(--accent-gradient);
        color: white;
        padding: 1rem 3rem;
        border-radius: 50px;
        font-weight: 700;
        text-decoration: none;
        transition: var(--hover-transition);
    }

        .btn-glow:hover {
            box-shadow: 0 0 30px rgba(168, 85, 247, 0.5);
            color: white;
        }

    .btn-outline {
        border: 2px solid rgba(255,255,255,0.2);
        color: white;
        padding: 1rem 3rem;
        border-radius: 50px;
        font-weight: 700;
        text-decoration: none;
        transition: var(--hover-transition);
    }

        .btn-outline:hover {
            border-color: white;
            background: rgba(255,255,255,0.1);
            color: white;
        }

    /* Greeting text */
    .greeting {
        color: var(--text-secondary);
        font-size: 1.1rem;
        margin-bottom: 1rem;
        display: block;
    }
</style>

<AuthorizeView>
    <Authorized>
        <div class="app-container">
            <span class="greeting">@GetTimeBasedGreeting(), <strong>@GetFirstName(context.User.Identity?.Name)</strong></span>

            <div class="hero-banner">
                <div class="hero-content">
                    <h1>Ready for something new?</h1>
                    <p>Our AI has curated a list of tracks specifically tailored to your vibe right now.</p>
                    <a href="recommendations" class="hero-btn">
                        Find Your Groove <span class="bi bi-play-fill"></span>
                    </a>
                </div>
            </div>

            <h2 class="section-title">Your Library</h2>
            <div class="card-grid">
                <a href="playlists" class="feature-card">
                    <div>
                        <div class="card-icon"><i class="bi bi-music-note-list"></i></div>
                        <h3 class="card-title">My Playlists</h3>
                    </div>
                    <p class="card-desc">Jump back into your created collections.</p>
                </a>

                <a href="listeninghistories" class="feature-card">
                    <div>
                        <div class="card-icon"><i class="bi bi-clock-history"></i></div>
                        <h3 class="card-title">History</h3>
                    </div>
                    <p class="card-desc">Rediscover what you've been jamming to.</p>
                </a>

                <a href="songs" class="feature-card">
                    <div>
                        <div class="card-icon"><i class="bi bi-vinyl"></i></div>
                        <h3 class="card-title">All Songs</h3>
                    </div>
                    <p class="card-desc">Explore the entire Groovy catalog.</p>
                </a>

                <a href="profilepage" class="feature-card">
                    <div>
                        <div class="card-icon"><i class="bi bi-person-circle"></i></div>
                        <h3 class="card-title">My Profile</h3>
                    </div>
                    <p class="card-desc">Manage your account and settings.</p>
                </a>
            </div>

            <h2 class="section-title">Discover</h2>
            <div class="card-grid">
                <a href="magic-playlists" class="feature-card" style="background: linear-gradient(45deg, #240b36, #181818);">
                    <div>
                        <div class="card-icon"><i class="bi bi-stars"></i></div>
                        <h3 class="card-title">Magic Playlist</h3>
                    </div>
                    <p class="card-desc">Let us build the perfect queue for you automatically.</p>
                </a>

                <a href="artist/upload-song" class="feature-card">
                    <div>
                        <div class="card-icon"><i class="bi bi-cloud-upload"></i></div>
                        <h3 class="card-title">Upload Music</h3>
                    </div>
                    <p class="card-desc">Share your own creations with the world.</p>
                </a>
            </div>

        </div>
    </Authorized>

    <NotAuthorized>
        <div class="app-container">
            <div class="landing-wrapper">
                <div style="font-size: 4rem; margin-bottom: 1rem;">🎵</div>
                <h1 class="landing-title">Groovy.</h1>
                <p class="landing-subtitle">
                    Music discovery aimed at the soul. <br />
                    Join thousands of listeners finding their next obsession.
                </p>

                <div class="auth-actions">
                    <a href="Account/Register" class="btn-glow">Get Started Free</a>
                    <a href="Account/Login" class="btn-outline">Login</a>
                </div>

                <div class="card-grid" style="margin-top: 5rem; text-align: left;">
                    <div class="feature-card">
                        <div class="card-icon">🧠</div>
                        <h3 class="card-title">Smart AI</h3>
                        <p class="card-desc">Algorithms that actually understand your taste.</p>
                    </div>
                    <div class="feature-card">
                        <div class="card-icon">🎨</div>
                        <h3 class="card-title">For Artists</h3>
                        <p class="card-desc">A platform built to help you be heard.</p>
                    </div>
                    <div class="feature-card">
                        <div class="card-icon">🌊</div>
                        <h3 class="card-title">Flow State</h3>
                        <p class="card-desc">Uninterrupted listening with cross-fading.</p>
                    </div>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private string GetFirstName(string? email)
    {
        if (string.IsNullOrEmpty(email)) return "Guest";
        var name = email.Split('@')[0];
        return char.ToUpper(name[0]) + name.Substring(1);
    }

    private string GetTimeBasedGreeting()
    {
        var hour = DateTime.Now.Hour;
        if (hour < 12) return "Good morning";
        if (hour < 18) return "Good afternoon";
        return "Good evening";
    }
}
@page "/recommendations/edit"
@attribute [Authorize(Roles = "Administrator, User, Artist")]
@inject IDbContextFactory<GroovyContext> DbFactory
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}
else if (Recommendation is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <h2>Recommendation</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <EditForm Model="Recommendation" OnValidSubmit="UpdateRecommendation">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-3">
                    <label class="form-label">Algorithm Used</label>
                    <InputText class="form-control" @bind-Value="Recommendation.AlgorithmUsed" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Seed Input (JSON/string)</label>
                    <InputText class="form-control" @bind-Value="Recommendation.SeedInput" />
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-outline-secondary ms-2" href="/recommendations">Back</a>
            </EditForm>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery] private int Id { get; set; }
    private Recommendation? Recommendation;
    private string error = "";
    private bool isAdmin;
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = auth.User;

        userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        isAdmin = user.IsInRole("Administrator");

        using var db = DbFactory.CreateDbContext();
        Recommendation = await db.Recommendation.FirstOrDefaultAsync(r => r.Id == Id);

        if (Recommendation is null)
        {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        if (!isAdmin && Recommendation.AppUserId != userId)
        {
            error = "You are not allowed to edit this recommendation.";
            Recommendation = null;
        }
    }

    private async Task UpdateRecommendation()
    {
        if (Recommendation is null) return;

        using var db = DbFactory.CreateDbContext();

        var existing = await db.Recommendation.FirstOrDefaultAsync(r => r.Id == Recommendation.Id);
        if (existing is null)
        {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        if (!isAdmin && existing.AppUserId != userId)
        {
            error = "You are not allowed to edit this recommendation.";
            return;
        }

        existing.AlgorithmUsed = Recommendation.AlgorithmUsed;
        existing.SeedInput = Recommendation.SeedInput;
        existing.DateUpdated = DateTime.UtcNow;
        existing.UpdatedBy = userId;

        await db.SaveChangesAsync();
        NavigationManager.NavigateTo($"/recommendations/details?id={existing.Id}");
    }
}

@page "/magic-playlists"

<PageTitle>Magic Playlist</PageTitle>

<div class="container py-4">
    <h2 class="fw-bold mb-2">✨ Magic Playlist</h2>
    <p class="text-muted">Auto-generate playlists based on your vibe</p>

    <div class="card p-4 shadow-sm mt-4">
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Era</label>
                <select class="form-select">
                    <option>1990s</option>
                    <option>2000s</option>
                    <option selected>2010s</option>
                    <option>2020s</option>
                </select>
            </div>

            <div class="col-md-4">
                <label class="form-label">Vibe</label>
                <select class="form-select">
                    <option selected>Chill</option>
                    <option>Energetic</option>
                    <option>Dreamy</option>
                </select>
            </div>

            <div class="col-md-4 d-flex gap-2">
                <button class="btn btn-primary w-100">Generate</button>
                <button class="btn btn-outline-secondary w-100">Wildcard</button>
            </div>
        </div>
    </div>
</div>

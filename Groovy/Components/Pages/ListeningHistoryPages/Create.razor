@page "/listeninghistories/create"
@using Microsoft.EntityFrameworkCore
@using Groovy.Domain
@inject IDbContextFactory<Groovy.Data.GroovyContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>ListeningHistory</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="ListeningHistory" OnValidSubmit="AddListeningHistory" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <span class="text-danger">*</span>
                <label for="appuserid" class="form-label">AppUserId:</label> 
                <InputText id="appuserid" @bind-Value="ListeningHistory.AppUserId" class="form-control" aria-required="true"/> 
                <ValidationMessage For="() => ListeningHistory.AppUserId" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <span class="text-danger">*</span>
                <label for="songid" class="form-label">SongId:</label> 
                <InputNumber id="songid" @bind-Value="ListeningHistory.SongId" class="form-control" aria-required="true"/> 
                <ValidationMessage For="() => ListeningHistory.SongId" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <span class="text-danger">*</span>
                <label for="listenedat" class="form-label">ListenedAt:</label> 
                <InputDate id="listenedat" @bind-Value="ListeningHistory.ListenedAt" class="form-control" aria-required="true"/> 
                <ValidationMessage For="() => ListeningHistory.ListenedAt" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="playeddurationpercent" class="form-label">PlayedDurationPercent:</label> 
                <InputNumber id="playeddurationpercent" @bind-Value="ListeningHistory.PlayedDurationPercent" class="form-control" /> 
                <ValidationMessage For="() => ListeningHistory.PlayedDurationPercent" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="skipped" class="form-label">Skipped:</label> 
                <InputCheckbox id="skipped" @bind-Value="ListeningHistory.Skipped" class="form-check-input" /> 
                <ValidationMessage For="() => ListeningHistory.Skipped" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="datecreated" class="form-label">DateCreated:</label> 
                <InputDate id="datecreated" @bind-Value="ListeningHistory.DateCreated" class="form-control" /> 
                <ValidationMessage For="() => ListeningHistory.DateCreated" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="dateupdated" class="form-label">DateUpdated:</label> 
                <InputDate id="dateupdated" @bind-Value="ListeningHistory.DateUpdated" class="form-control" /> 
                <ValidationMessage For="() => ListeningHistory.DateUpdated" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createdby" class="form-label">CreatedBy:</label> 
                <InputText id="createdby" @bind-Value="ListeningHistory.CreatedBy" class="form-control" /> 
                <ValidationMessage For="() => ListeningHistory.CreatedBy" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="updatedby" class="form-label">UpdatedBy:</label> 
                <InputText id="updatedby" @bind-Value="ListeningHistory.UpdatedBy" class="form-control" /> 
                <ValidationMessage For="() => ListeningHistory.UpdatedBy" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/listeninghistories">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private ListeningHistory ListeningHistory { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddListeningHistory()
    {
        using var context = DbFactory.CreateDbContext();
        context.ListeningHistory.Add(ListeningHistory);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/listeninghistories");
    }
}

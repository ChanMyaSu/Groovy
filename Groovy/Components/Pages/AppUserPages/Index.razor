@page "/appusers"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Groovy.Domain
@using Groovy.Data
@implements IAsyncDisposable
@inject IDbContextFactory<Groovy.Data.GroovyContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="appusers/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.AppUser">
    <PropertyColumn Property="appuser => appuser.UserId" />
    <PropertyColumn Property="appuser => appuser.Username" />
    <PropertyColumn Property="appuser => appuser.Email" />
    <PropertyColumn Property="appuser => appuser.Password" />
    <PropertyColumn Property="appuser => appuser.DateCreated" />
    <PropertyColumn Property="appuser => appuser.DateUpdated" />
    <PropertyColumn Property="appuser => appuser.CreatedBy" />
    <PropertyColumn Property="appuser => appuser.UpdatedBy" />

    <TemplateColumn Context="appuser">
        <a href="@($"appusers/edit?id={appuser.Id}")">Edit</a> |
        <a href="@($"appusers/details?id={appuser.Id}")">Details</a> |
        <a href="@($"appusers/delete?id={appuser.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private GroovyContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}

@page "/appusers/details"
@using Microsoft.EntityFrameworkCore
@using Groovy.Domain
@inject IDbContextFactory<Groovy.Data.GroovyContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>AppUser</h2>
    <hr />
    @if (appuser is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@appuser.UserId</dd>
            <dt class="col-sm-2">Username</dt>
            <dd class="col-sm-10">@appuser.Username</dd>
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@appuser.Email</dd>
            <dt class="col-sm-2">Password</dt>
            <dd class="col-sm-10">@appuser.Password</dd>
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@appuser.DateCreated</dd>
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@appuser.DateUpdated</dd>
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@appuser.CreatedBy</dd>
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@appuser.UpdatedBy</dd>
        </dl>
        <div>
            <a href="@($"/appusers/edit?id={appuser.Id}")">Edit</a> |
            <a href="@($"/appusers")">Back to List</a>
        </div>
    }
</div>

@code {
    private AppUser? appuser;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        appuser = await context.AppUser.FirstOrDefaultAsync(m => m.Id == Id);

        if (appuser is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
